{% extends 'layout.twig' %}

{% block style %}
<link rel="stylesheet" href="../stylesheets/error.css">
{% endblock %}

{% block body %}
<div class="container" id="main">
  {% if error.status == 404 %}
  <div class="container text-center">
    <div class="jumbotron">
    <div class="row">
     
      <div class="col-md-6">
       
        <h3 class="h3">Stranica koju tražite ne postoji. Probajte da odete na <a href="/">početnu stranicu.</a></h3>
      
    </div>
    <div class="col-md-6">
      <img src="../images/not_found.png">
    </div>
     </div>
    </div>
  </div>
</div>
  {% else %}
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6">
        <div class="alert alert-info">
          <h3 class="h3">Trenutno nismo u mogućnosti da izvršimo zahtev, pokušajte ponovo kasnije. <a href="/"><i>početna strana</i></a></h3>
        </div>
      </div>
      <div class="col-md-6">
        <div class="container">
          <img src="../images/error2.png" style="width:250px; height:250px;"alt="error">
        </div>
      </div>
    </div>
  </div>

  {% endif %}
{% endblock %}
